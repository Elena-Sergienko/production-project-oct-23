{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5", // which version of the code will be compiled to
      "jsx": "react",
      "allowJs": true,  // the compiler will handle not only .ts but also .js files
      "moduleResolution": "node",
    //   "baseUrl": ".",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
    }
  }  